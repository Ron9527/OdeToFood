@using OdeToFood.Core
@model Restaurant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg"
            asp-page="./Detail" asp-route-restaurantId="@Model.Id">
            <i class="bi bi-search-heart" title="search"></i>
        </a>
        <a class="btn btn-lg"
            asp-page="./Edit" asp-route-restaurantId="@Model.Id">
            <i class="bi bi-pen" title="edit"></i>
        </a>
        <a class="btn btn-lg"
            asp-page="./Delete" asp-route-restaurantId="@Model.Id">
            <i class="bi bi-file-earmark-x" title="delete"></i>
        </a>
    </div>
</div>
